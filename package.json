{
  "name": "bio2game_backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "node ace build --production",
    "start": "node server.js",
    "dev": "node ace serve --watch",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "db:migrate": "docker exec -it bio2game_backend node ace migration:run",
    "db:migrate:undo": "docker exec -it bio2game_backend node ace migration:undo"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.3.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/sharp": "^0.26.0",
    "adonis-preset-ts": "^1.1.0",
    "eslint": "^7.12.1",
    "eslint-plugin-adonis": "^1.0.15",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "typescript": "^4.0.5",
    "youch": "^2.1.1",
    "youch-terminal": "^1.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "@adonisjs/ally": "^4.1.1",
    "@adonisjs/application": "^5.1.3",
    "@adonisjs/auth": "^8.0.9",
    "@adonisjs/core": "^5.3.2",
    "@adonisjs/lucid": "^16.0.2",
    "@adonisjs/mail": "^7.2.0",
    "@adonisjs/repl": "^3.1.6",
    "@adonisjs/session": "^6.0.5",
    "@adonisjs/view": "^6.1.0",
    "@poppinss/utils": "^3.0.5",
    "@types/socket.io": "^2.1.11",
    "bcrypt": "^5.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "pg": "^8.7.1",
    "phc-argon2": "^1.0.11",
    "phc-bcrypt": "^1.0.4",
    "pino-pretty": "^4.3.0",
    "proxy-addr": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.26.2",
    "socket.io": "^2.4.1",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.2"
  }
}
